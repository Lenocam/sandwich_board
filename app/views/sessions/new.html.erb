<div class="new-sessions">

	<h1>Log In</h1>

	<div class="row col-xs-push-4">
		<div class="form">
			<%= form_for(:session, url: login_path) do |f| %>

			<%= f.label :email %>
			<%= f.email_field :email, class: 'form-control' %><br>

			<%= f.label :password %>
			<%= link_to "(forgot password)", new_password_reset_path %><br>
			<%= f.password_field :password, class: 'form-control' %><br>

			<%= f.label :remember_me, class: "checkbox inline" do %>
			<span>Remember me on this computer</span> <%= f.check_box :remember_me %>

			<% end %>

			<%= f.submit "Log In", class: "btn btn-primary" %><br>
			<% end %><br>

			<p>New User?
				<%= link_to "Sign up now!", signup_path %>
			</p>
		</div>
	</div>
</div>
