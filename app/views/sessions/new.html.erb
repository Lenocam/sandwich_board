<h1>Log In</h1>

<div class="row">
	<div class="form">
		<%= form_for(:session, url: login_path) do |f| %>

		<%= f.label :email %><br>
		<%= f.email_field :email, class: 'form-control' %><br>

		<%= f.label :password %><br>
		<%= link_to "(forgot password)", new_password_reset_path %><br>
		<%= f.password_field :password, class: 'form-control' %><br>

		<%= f.label :remember_me, class: "checkbox inline" do %><br>
		<%= f.check_box :remember_me %><br>
		<span>Remember me on this computer</span>
		<% end %>

		<%= f.submit "Log In", class: "button" %><br>
		<% end %>

		<p>New User?
			<%= link_to "Sign up now!", signup_path %>
		</p>
	</div>
</div>
