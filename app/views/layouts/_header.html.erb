<header>
	<div class="container">
		<%= link_to "Sandwich Board", root_path %>
		<ul class="nav">
			<li><%= link_to "Home", root_path %></li>
			<% if !logged_in? %>
				<li><%= link_to "Sign Up", signup_path, :class => "button" %></li>
			<% end %>
			<% if logged_in? && current_user.admin? %>
				<li><%= link_to "Users", users_path %></li>
			<% end %>
			<% if logged_in? %>
				<li><%= link_to "Dashboard", current_user %></li>
				<li><%= link_to "Settings", edit_user_path(current_user) %></li>
				<li><%= link_to "Galleries", user_galleries_path(current_user) %></li>
				<li><%= link_to "Albums", user_albums_path(current_user) %></li>
				<li><%= link_to "Images", user_images_path(current_user) %></li>
				<li><%= link_to "Log out", logout_path, method: "delete" %></li>
			<% else %>
				<li><%= link_to "Log In", login_path %></li>
			<% end %>
		</ul>
	</div>
</header>
