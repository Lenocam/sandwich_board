<p id="notice"><%= notice %></p>

<h3><%= @user.name %></h3>

<div class="col-md-8">
		<% if @user.galleries.any? %>
			<h3>Galleries (<%= @user.galleries.count %>)</h3>
			<ol class="galleries">
				<%= render @galleries %>
			</ol>
			<%= will_paginate @galleries %>
		<% end %>
	</div>
<%= link_to 'New Gallery', new_user_gallery_path(@user) %>
<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
