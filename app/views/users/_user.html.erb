<tr>
	<td><%= user.name %></td>
	<td><%= user.email %></td>
	<td><%= link_to 'Show', user %></td>
	<td><%= link_to 'Edit', edit_user_path(user) %></td>
		<% if current_user.admin? && !current_user?(user) %>
	<td><%= link_to 'Delete', user, method: :delete,
																		 data: { confirm: 'Are you sure?' } %>
	</td>
	<% end %>
</tr>
