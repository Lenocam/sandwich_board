<p id="notice"><%= notice %></p>

<h1><% current_user.name %> Albums</h1>

<div class="row">
	<div class="flex-images">
		<% @albums.each do |album| %>
		<ul class="col-lg-2 col-md-2 col-sm-3 col-xs-4">
			<li><%= link_to album.name, album %></li>
			<li class="item floating-box"><%= link_to attachment_image_tag(album.images.first, :file), album %></li>
			<li><%= link_to 'Edit', edit_album_path(album) %></li>
			<li><%= link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' } %></li>
		</ul>
		<% end %>
	</div>
	<br>
</div>
<%= link_to 'New Album', new_user_album_path %>
