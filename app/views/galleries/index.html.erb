<p id="notice"><%= notice %></p>

<h1><%= current_user.name %> Galleries</h1>

<table>
	<thead>
		<tr>
			<th>Title</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @galleries.each do |gallery| %>
			<tr>
				<td><%= gallery.title %></td>
				<td>
					<%= attachment_image_tag(gallery.images.first, :file, :limit, 200, 200) %>
				</td>
				<td><%= link_to 'Show', gallery %></td>
				<td><%= link_to 'Edit', edit_gallery_path(gallery) %></td>
				<td><%= link_to 'Destroy', gallery, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			</tr>
		<% end %>
	</tbody>
</table>

<br>

<%= link_to 'New Gallery', new_user_gallery_path %>
